                                <id>run-devmode</id>
                                <phase>process-classes</phase>
                                <goals>
                                    <goal>build</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <bytecodeClasspath>
                                <param>${java-classpath}</param>
                                <param>${webapp.libdir}/jre.jar</param>
