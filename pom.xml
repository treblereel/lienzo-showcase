                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>com.vertispan.j2cl</groupId>
                                            <artifactId>jre</artifactId>
                                            <version>0.2-SNAPSHOT</version>
                                            <destFileName>jre.jar</destFileName>
